<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanel.AdminUserProductActivity">

    <TextView
        android:id="@+id/username_orders_admin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/status"
        android:gravity="center"
        android:paddingEnd="30dp"
        android:text="Products"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        android:textStyle="bold"

        />

    <androidx.recyclerview.widget.RecyclerView

        android:layout_below="@id/username_orders_admin"
        android:id="@+id/admin_user_product_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp" />
</RelativeLayout>