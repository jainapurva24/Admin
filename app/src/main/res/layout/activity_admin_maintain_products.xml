<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanel.AdminMaintainProductsActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView_detail_maintain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tshirts" />

        <TextView
            android:id="@+id/changeImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_detail_maintain"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            android:text="Change image"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold|italic"

            />

    <EditText
        android:id="@+id/product_name_detail_maintain"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changeImageText"
        android:layout_marginHorizontal="20dp"
        android:text="Female Tshirts"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_description_detail_maintain"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_detail_maintain"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Female Tshirts"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/product_price_detail_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_description_detail_maintain"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:text="Price: $200"
            android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price_detail_maintain"
        android:layout_margin="15dp"
        android:id="@+id/apply_btn_maintain"
        android:background="@drawable/buttons"
        android:text="Apply Changes"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/apply_btn_maintain"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/delete_product"
            android:background="@drawable/buttons"
            android:text="Delete this product"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            />
    </RelativeLayout>



</ScrollView>